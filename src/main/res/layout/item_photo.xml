<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlPhotos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/ivPhotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProfilePhoto"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_launcher" />
    // android:layout_marginTop="40dp"

    <TextView
        android:id="@+id/tvLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPhotos"
        android:layout_toEndOf="@+id/ivLike"
        android:layout_toRightOf="@+id/ivLike"
        android:text="New Text"
        android:textColor="#517fa4"
        android:textSize="10dp"
        android:textStyle="normal|bold"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/ivLike"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivPhotos"
        android:adjustViewBounds="true"
        android:src="@drawable/like_icon"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivLike"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="Test"
        android:textSize="12sp"
        android:textStyle="normal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <TextView
        android:id="@+id/tvCommentTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvCaption"
        android:text="New Text"
        android:textColor="#6E7273"
        android:textSize="10dp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/tvComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvCommentTotal"
        android:ellipsize="end"
        android:text="New Text"
        android:textSize="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/ivProfilePhoto"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@mipmap/dummy_profile"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/tvRelativeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relative time"
        android:textSize="12dp"
        android:textStyle="normal"
        android:layout_alignTop="@+id/ivTime"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:paddingRight="10dp"/>

    <ImageView
        android:id="@+id/ivTime"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_above="@+id/ivPhotos"
        android:layout_toLeftOf="@+id/tvRelativeTime"
        android:layout_toStartOf="@+id/tvRelativeTime"
        android:adjustViewBounds="true"
        android:src="@drawable/clock_icon"
        android:layout_marginBottom="10dp"/>



</RelativeLayout>