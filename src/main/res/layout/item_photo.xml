<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlPhotos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/ivPhotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivProfilePhoto"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_launcher" />
    // android:layout_marginTop="40dp"

    <TextView
        android:id="@+id/tvLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPhotos"
        android:layout_toEndOf="@+id/ivLike"
        android:layout_toRightOf="@+id/ivLike"
        android:text="New Text"
        android:textColor="#637AFF"
        android:textSize="10dp"
        android:textStyle="normal|italic" />

    <ImageView
        android:id="@+id/ivLike"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivPhotos"
        android:adjustViewBounds="true"
        android:src="@drawable/like_icon" />

    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivLike"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="Test"
        android:textSize="15sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tvCommentTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvCaption"
        android:layout_marginTop="5dp"
        android:text="New Text"
        android:textColor="#ffbebebe"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/tvComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvCommentTotal"
        android:layout_marginBottom="5dp"
        android:ellipsize="end"
        android:text="New Text"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/ivProfilePhoto"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@mipmap/dummy_profile" />

    <TextView
        android:id="@+id/tvRelativeTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ivTime"
        android:text="Relative time"
        android:textSize="12dp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/ivTime"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_above="@+id/ivPhotos"
        android:layout_toLeftOf="@+id/tvRelativeTime"
        android:layout_toStartOf="@+id/tvRelativeTime"
        android:adjustViewBounds="true"
        android:src="@drawable/clock_icon" />


</RelativeLayout>